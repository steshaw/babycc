#!/bin/sh

if [ $# -ne 2 ]; then
    echo "usage: check <expression> <expected-result>" >&2
    exit 2
fi

expression=$1
expected=$2

echo -------------------------------------------------------------------------
echo EXPRESSION: $expression
echo -------------------------------------------------------------------------
babycc -e "$expression" >expression.s 2>babycc.out
if [ $? -ne 0 ]; then
    echo "expression '$expression' failed with:"
    cat b babycc.out
    if [ "`<superc.out`" != "$expected" ]; then
        echo "EXPECTED $expected"
        exit 1
    fi
    exit 0
fi
cat expression.s
gcc expression.s main.o -o expression
if [ $? -ne 0 ]; then
    echo "assembler failed on expression '$expression'"
    exit 1
fi
./expression >expression.out 2>&1
echo -n "$expression => "
cat expression.out
if [ "`<expression.out`" != "$expected" ]; then
    echo "EXPECTED $expected"
    exit 1
fi
